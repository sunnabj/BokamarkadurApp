<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MenuActivity"
    android:orientation="vertical"
    android:background="@color/whiteCardColor"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/app_name_2"
                    style="@style/viewParent.headerText"
                    android:layout_gravity="bottom"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero"
                    android:adjustViewBounds="true" />
            </LinearLayout>

            <!--        ___________ CARDS Ã­ MENU _________________________________ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <!--            ___________ 1. LayoutColumn   ___________________________________ -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <!--                ___________   1. CARD   - (1.row / 1.column) __________________ -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/MenuCard1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            android:background="@drawable/home_gradient_maths"
                            android:padding="10dp"
                            android:gravity="center_vertical|center_horizontal" >


                            <TextView
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:id="@+id/textViewSub1Title"
                                android:text="@string/menu_card_1"
                                android:textSize="20sp" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!--                ___________   3. CARD   - (2.row / 1.column) __________________ -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/MenuCard3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            gl:end_color="@color/gradientLightYellow2"
                            gl:start_color="@color/gradientLightOrange2"
                            gl:orientation="LEFT_RIGHT"
                            android:padding="10dp"
                            android:gravity="center_vertical|center_horizontal" >

                            <TextView
                                android:id="@+id/textViewSub3Title"
                                android:text="@string/menu_card_3"
                                android:textSize="20sp"
                                style="@style/viewParent.headerText.HomeCardTitle" />


                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <!--                ___________   5. CARD   - (3.row / 1.column) __________________ -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/MenuCard5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            gl:start_color="@color/gradientViolet"
                            gl:end_color="@color/gradientLightBlue"
                            gl:orientation="LEFT_RIGHT"
                            android:padding="10dp"
                            android:gravity="center_vertical|center_horizontal" >

                            <TextView
                                android:id="@+id/textViewSub5Title"
                                android:text="@string/menu_card_5"
                                android:textSize="20sp"
                                style="@style/viewParent.headerText.HomeCardTitle" />

                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!--                ___________   7. CARD   - (4.row / 1.column) __________________ -->


                </LinearLayout>

                <!--            ___________ 2. LayoutColumn   ___________________________________ -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <!--                ___________   2. CARD   - (1.row / 2.column) __________________ -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/MenuCard2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            gl:start_color="@color/gradientLightYellow"
                            gl:end_color="@color/gradientOrange"
                            gl:orientation="LEFT_RIGHT"
                            android:padding="10dp"
                            android:gravity="center_vertical|center_horizontal" >


                            <TextView
                                android:id="@+id/textViewSub2Title"
                                android:text="@string/menu_card_2"
                                android:textSize="20sp"
                                style="@style/viewParent.headerText.HomeCardTitle" />

                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!--                ___________   4. CARD   - (2.row / 2.column) __________________ -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/MenuCard4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            gl:start_color="@color/gradientLightOrange2"
                            gl:end_color="@color/gradientOrange3"
                            gl:orientation="LEFT_RIGHT"
                            android:padding="10dp"
                            android:gravity="center_vertical|center_horizontal" >

                            <TextView
                                android:id="@+id/textViewSub4Title"
                                android:text="@string/menu_card_4"
                                android:gravity="center"
                                style="@style/viewParent.headerText.HomeCardTitle" />


                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!--                ___________   6. CARD   - (3.row / 2.column) __________________ -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/MenuCard7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <net.colindodd.gradientlayout.GradientRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            gl:start_color="@color/gradientLightGreen"
                            gl:end_color="@color/gradientLightBlue"
                            gl:orientation="LEFT_RIGHT"
                            android:padding="10dp"
                            android:gravity="center_vertical|center_horizontal" >

                            <TextView
                                android:text="@string/menu_card_7"
                                android:gravity="center"
                                android:textSize="20sp"
                                style="@style/viewParent.headerText.HomeCardTitle" />


                        </net.colindodd.gradientlayout.GradientRelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!--                ___________   8. CARD   - (4.row / 2.column) __________________ -->

                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/MenuCard8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="10dp">

                <net.colindodd.gradientlayout.GradientRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:gravity="center"
                    gl:end_color="@color/gradientOrange3"
                    gl:orientation="LEFT_RIGHT"
                    gl:start_color="@color/gradientLightOrange2">

                    <TextView
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:text="@string/menu_card_8"
                        android:textSize="20sp" />


                </net.colindodd.gradientlayout.GradientRelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_navigation_background"
        android:elevation="8dp"
        app:labelVisibilityMode="selected"
        app:itemIconTint="@drawable/bottom_navigation_color_selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation"
        app:itemHorizontalTranslationEnabled="true"
        />

</RelativeLayout>