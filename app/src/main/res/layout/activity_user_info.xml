<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UserInfoActivity">
    <ScrollView style="@style/parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:weightSum="12">

                <LinearLayout
                    style="@style/parent"
                    android:layout_weight="3"
                    android:background="@drawable/login_shape_bk"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/parent"
                        android:background="@drawable/ic_login_bk"
                        android:contentDescription="login background" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:text="    View User       "
                    style="@style/viewParent.headerTextother"
                    android:layout_gravity="bottom"/>

                <ImageView
                    android:paddingTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mobile_user"
                    android:adjustViewBounds="true" />



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:paddingTop="170dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/shape"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="300dp" >


        <TextView
            android:id="@+id/view_user_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/view_user_email"
            android:paddingTop="16dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:src="@drawable/book"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/view_user_phone"
            android:paddingTop="5dp"
            android:paddingBottom="16dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:src="@drawable/book"
            android:paddingLeft="20dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/view_user_info"
            android:paddingTop="5dp"
            android:paddingBottom="16dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:src="@drawable/book"
            android:paddingLeft="20dp"
            android:scaleType="fitXY"/>

        <Button
            android:id="@+id/viewReviews"
            style="@style/loginButton"
            android:text="View Reviews"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

    </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_navigation_background"
        android:elevation="8dp"
        app:labelVisibilityMode="selected"
        app:itemIconTint="@drawable/bottom_navigation_color_selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation"
        app:itemHorizontalTranslationEnabled="true"
        />


</RelativeLayout>
